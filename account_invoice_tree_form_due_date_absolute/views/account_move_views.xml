<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="view_invoice_tree" model="ir.ui.view">
        <field name="name">account.invoice.tree.due.date.absolute</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_invoice_tree" />
        <field name="arch" type="xml">
            <field name="invoice_date_due" position="attributes">
                <attribute name="widget" />
            </field>
        </field>
    </record>

    <record id="view_move_form" model="ir.ui.view">
        <field name="name">account.invoice.form.due.date.absolute</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='invoice_date_due']" position="attributes">
                <attribute name="attrs" />
            </xpath>

            <xpath
                expr="//field[@name='invoice_payment_term_id']"
                position="attributes"
            >
                <attribute name="class">oe_inline o_form_label mr-3 ml-5</attribute>
            </xpath>
        </field>
    </record>
</odoo>
