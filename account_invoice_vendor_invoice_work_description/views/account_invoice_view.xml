<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <!-- FORM VIEW -->
    <record id="view_move_form" model="ir.ui.view">
        <field name="name">account.move.form.work.bill.description</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form" />
        <field name="arch" type="xml">
            <xpath
                expr="//page[@name='other_info']//group//group//field[@name='company_id']"
                position="after"
            >
                <field
                    name="work_description"
                    attrs="{'invisible':[('move_type', 'not in', ('in_invoice', 'in_receipt', 'in_refund'))]}"
                />
            </xpath>
        </field>
    </record>
    <!-- SEARCH VIEW -->
    <record id="view_account_move_filter" model="ir.ui.view">
        <field name="name">account.move.select.work.description</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_account_move_filter" />
        <field name="arch" type="xml">
            <field name="date" position="after">
                <field name="work_description" />
            </field>
        </field>
    </record>
</odoo>
