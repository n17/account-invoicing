<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <template
        id="report_account_invoice_document"
        inherit_id="account.report_invoice_document"
    >
        <xpath expr="//t[@t-set='o']" position="before">
            <t t-set="report_title">
                <t t-if="o.move_type in ['out_invoice', 'in_invoice']">Invoice</t>
                <t t-else="">Refund</t>
                <span t-if="o.name != '/'" t-esc="o.name" />
            </t>
        </xpath>
    </template>
</odoo>
