<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="view_account_config_settings" model="ir.ui.view">
        <field
            name="name"
        >res.config.settings.view.form.invoice.company.country.text</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="account.res_config_settings_view_form" />
        <field name="arch" type="xml">
            <div id="invoicing_settings" position="inside">
                <div
                    class="col-12 col-lg-6 o_setting_box"
                    id="invoice_report_country_text"
                >
                    <div class="o_setting_left_pane">
                        <field
                            name="invoice_report_country_text"
                            options="{'no_create': True}"
                        />
                    </div>
                    <div class="o_setting_right_pane">
                        <label for="invoice_report_country_text" />
                        <div class="text-muted">
                            Set country text on invoice pdf print
                        </div>
                    </div>
                </div>
            </div>
        </field>
    </record>
</odoo>
