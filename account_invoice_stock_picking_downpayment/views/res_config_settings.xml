<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.stock.downpayment</field>
        <field name="model">res.config.settings</field>
        <field name="priority" eval="100" />
        <field name="inherit_id" ref="stock.res_config_settings_view_form" />
        <field name="arch" type="xml">
            <xpath
                expr="//div[@data-key='stock']/div[@name='shipping_setting_container']/div[@id='delivery']"
                position="after"
            >
                <div
                    id="stock_picking_waiting_payment_priority"
                    class="col-12 col-lg-6 o_setting_box"
                >
                    <div class="o_setting_left_pane">

                    </div>
                    <div class="o_setting_right_pane">
                        <label for="stock_picking_waiting_payment_priority" />
                        <field name="stock_picking_waiting_payment_priority" />
                    </div>
                </div>
                <div
                    id="stock_picking_completed_payment_priority"
                    class="col-12 col-lg-6 o_setting_box"
                >
                    <div class="o_setting_left_pane">

                    </div>
                    <div class="o_setting_right_pane">
                        <label for="stock_picking_completed_payment_priority" />
                        <field name="stock_picking_completed_payment_priority" />
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
