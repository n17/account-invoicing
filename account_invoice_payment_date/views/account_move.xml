<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_invoice_tree" model="ir.ui.view">
        <field name="name">account.move.tree.payment.date</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_invoice_tree"/>
        <field name="arch" type="xml">
            <field name="invoice_date" position="after">
                <field name="payment_date" optional="hide" />
            </field>
        </field>
    </record>

    <record id="view_move_form" model="ir.ui.view">
        <field name="name">account.move.form.payment.date</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <field name="invoice_date" position="after">
                <field name="payment_date" attrs="{'invisible': [('payment_date', '=', False)]}" />
            </field>
        </field>
    </record>

    <record id="view_account_invoice_filter" model="ir.ui.view">
        <field name="name">account.move.select.payment.date</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_account_invoice_filter"/>
        <field name="arch" type="xml">
            <field name="date" position="after">
                <field name="payment_date" string="Payment date"/>
            </field>

            <filter name="due_date" position="after">
                <filter name="payment_date" string="Payment date" date="payment_date"/>
            </filter>
        </field>
    </record>

</odoo>
