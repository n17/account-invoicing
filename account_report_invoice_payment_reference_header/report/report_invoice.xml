<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <template
        id="report_invoice_document_payment_reference"
        inherit_id="account.report_invoice_document"
    >
        <xpath expr="//p[@name='payment_communication']" position="attributes">
            <attribute name="t-if">1==0</attribute>
        </xpath>
        <xpath expr="//div[@id='informations']" position="inside">
            <div
                class="col-auto col-3 mw-100 mb-2"
                t-if="o.move_type in ('out_invoice', 'in_refund') and o.payment_reference"
                name="payment_reference"
            >
                <strong>Payment Reference:</strong>
                <p class="m-0" t-field="o.payment_reference" />
            </div>
        </xpath>
    </template>
</odoo>
