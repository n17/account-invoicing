<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="view_move_form" model="ir.ui.view">
        <field name="name">account.move.form.circulation</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form" />
        <field name="arch" type="xml">

            <button name="action_invoice_sent" position="before">

                <field name="allow_approve" invisible="1" />

                <button
                    name="action_invoice_approve"
                    type="object"
                    groups="account.group_account_invoice,account_invoice_circulation.group_invoice_approver"
                    string="Approve"
                    class="oe_highlight oe_read_only"
                    attrs="{'invisible': ['|', '|', ('invoice_approved', '=', True),('allow_approve', '=', False), ('account_invoice_circulation_id', '=', False)]}"
                />

                <button
                    name="action_invoice_approve"
                    type="object"
                    groups="account.group_account_manager"
                    string="Force Approve"
                    class="oe_highlight oe_read_only"
                    attrs="{'invisible': ['|', '|', ('invoice_approved', '=', True),('allow_approve', '=', True), ('account_invoice_circulation_id', '=', False)]}"
                />
            </button>

            <xpath expr="//div[@name='journal_div']" position="after">
                <field
                    name="current_approver_id"
                    attrs="{'invisible': [('account_invoice_circulation_id', '=', False)]}"
                />
                <field
                    name="invoice_approved"
                    attrs="{'invisible': [('account_invoice_circulation_id', '=', False)]}"
                />
                <field
                    name="account_invoice_circulation_id"
                    groups="account.group_account_manager"
                />
            </xpath>

        </field>
    </record>

    <record id="view_move_form_approver" model="ir.ui.view">
        <field name="name">account.move.form.circulation.approver</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form" />
        <field
            name="groups_id"
            eval="[(6, 0, [ref('account_invoice_circulation.group_invoice_approver')])]"
        />
        <field name="arch" type="xml">

            <field name="account_invoice_circulation_id" position="attributes">
                <attribute name="readonly">True</attribute>
            </field>

        </field>
    </record>


</odoo>
