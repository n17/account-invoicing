<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="view_move_form" model="ir.ui.view">
        <field name="name">account.move.form.pickings</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form" />
        <field name="arch" type="xml">

            <div name="button_box" position="inside">
                <field name="stock_picking_ids" invisible="1" />
                <button
                    name="action_show_stock_pickings"
                    class="oe_stat_button"
                    icon="fa-truck"
                    type="object"
                    attrs="{'invisible': [('stock_picking_ids', '=', [])]}"
                    string="Pickings"
                >
                </button>
            </div>

            <xpath expr="//label[@for='journal_id']" position="before">
                <field name="stock_picking_ids" widget="many2many_tags" />
            </xpath>

        </field>
    </record>
</odoo>
