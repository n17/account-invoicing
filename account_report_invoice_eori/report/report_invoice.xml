<?xml version="1.0" encoding="utf-8" ?>
<odoo>
  <template
        id="report_invoice_document_add_eori"
        inherit_id="account.report_invoice_document"
    >
    <xpath expr="//div[@t-if='o.partner_id.vat']" position="replace">
      <div t-if="o.partner_id.vat or o.partner_id.eori" class="mt16">
        <t
                    t-if="o.company_id.country_id.vat_label"
                    t-esc="o.company_id.country_id.vat_label"
                    id="inv_tax_id_label"
                />
        <t t-elif="o.partner_id.vat">Tax ID</t>: <span t-field="o.partner_id.vat" /><br
                />
        <t t-if="o.partner_id.eori">EORI: <span t-field="o.partner_id.eori" /><br /></t>
      </div>
    </xpath>
  </template>
</odoo>
