<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="view_move_form" model="ir.ui.view">
        <field name="name">account.move.form.customer</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form" />
        <field name="arch" type="xml">
            <xpath
                expr="//group[@id='header_left_group']//div[@class='o_td_label']"
                position="before"
            >
                <field
                    name='partner_customer_id'
                    domain="[('customer_rank', '>', 0)]"
                    attrs="{'invisible': [('move_type', 'not in', ('out_invoice', 'out_refund', 'out_receipt'))]}"
                    context="{'default_type': 'contact', 'default_is_company': True, 'default_company_type': 'company'}"
                />
            </xpath>

            <xpath
                expr="//group[@id='header_left_group']//label[@for='partner_id'][1]"
                position="attributes"
            >
                <attribute name="string">Invoice Address</attribute>
            </xpath>
        </field>
    </record>

    <record id="view_out_invoice_tree" model="ir.ui.view">
        <field name="name">account.out.invoice.tree.customer</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_out_invoice_tree" />
        <field name="arch" type="xml">
            <field name="partner_id" position="attributes">
                <attribute name="string">Invoice address</attribute>
            </field>

            <field name='partner_id' position='before'>
                <field name='partner_customer_id' optional="hide" />
            </field>
        </field>
    </record>
</odoo>
