<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="account_invoice_mass_create_wizard" model="ir.ui.view">
        <field name="model">account.invoice.mass.create</field>
        <field name="arch" type="xml">
            <form string="Create invoices">
                <group>
                    <field name="product_id" />
                    <field name="line_name" />
                    <field name="price_unit" />
                    <field name="quantity" />
                    <field name="payment_term_id" />
                    <field name="date_invoice" />
                    <field name="partner_bank_id" />
                    <field name="narration" />
                </group>
                <footer><button
                        string="Confirm"
                        type="object"
                        class="oe_highlight"
                        name="confirm"
                    />
                    or
                    <button string="Cancel" class="oe_link" special="cancel" />
                </footer>
            </form>
        </field>
    </record>

    <record id="action_account_invoice_mass_create" model="ir.actions.act_window">
        <field name="name">Create invoices</field>
        <field name="res_model">account.invoice.mass.create</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="binding_model_id" ref="base.model_res_partner" />
        <field name="binding_view_types">list</field>
    </record>

</odoo>
