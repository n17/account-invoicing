<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="view_move_form" model="ir.ui.view">
        <field name="name">account.move.form.hide.outstanding.debit</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form" />
        <field name="priority">99</field>
        <field name="arch" type="xml">
            <xpath expr="//div[@role='alert'][3]" position="replace" />

            <field
                name="invoice_outstanding_credits_debits_widget"
                position="attributes"
            >
                <attribute
                    name="attrs"
                >{'invisible': ['|', ('state', '!=', 'posted'), ('move_type', 'in', ('out_receipt', 'in_receipt', 'in_invoice', 'in_refund'))]}</attribute>
            </field>
        </field>
    </record>
</odoo>
