<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="view_move_form" model="ir.ui.view">
        <field name="name">account.move.form.hide.outstanding.debit</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form" />
        <field name="priority">99</field>
        <field name="arch" type="xml">
            <!-- A precise path to replace the element is needed -->
            <xpath
                expr="//div[@groups='account.group_account_invoice,account.group_account_readonly'][3]//a[@class='alert-link']/../.."
                position="replace"
            />

            <field
                name="invoice_outstanding_credits_debits_widget"
                position="attributes"
            >
                <attribute name="attrs">{'invisible': 1}</attribute>
            </field>
        </field>
    </record>
</odoo>
